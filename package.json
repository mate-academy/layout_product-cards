{
  "name": "layout_product_cards",
  "version": "1.0.0",
  "description": "Frontend practice with product cards",
  "author": "Mate Academy",
  "license": "GPL-3.0",
  "keywords": [],
  "scripts": {
    "start": "mate-scripts start",
    "build": "mate-scripts build",
    "test": "mate-scripts test",
    "build:css": "sass styles/index.scss dist/index.css --no-source-map",
    "init": "mate-scripts init",
    "format": "prettier --ignore-path .prettierignore --write './src/**/*.{html,css,scss}'",
    "lint": "npm run format && mate-scripts lint",
    "test:only": "mate-scripts test",
    "deploy": "mate-scripts deploy",
    "update": "mate-scripts update",
    "postinstall": "npm run update",
    "dev": "parcel watch src/index.html --no-hmr",
    "parcel:build": "parcel build src/index.html --out-dir dist --public-url ./"
  },
  "devDependencies": {
    "@linthtml/linthtml": "^0.9.6",
    "@mate-academy/backstop-config": "latest",
    "@mate-academy/bemlint": "latest",
    "@mate-academy/linthtml-config": "latest",
    "@mate-academy/scripts": "^2.1.1",
    "@mate-academy/stylelint-config": "latest",
    "@parcel/transformer-sass": "^2.12.0",
    "backstopjs": "6.3.23",
    "jest": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.2",
    "sass": "^1.90.0",
    "stylelint": "^16.7.0",
    "stylelint-scss": "^6.4.1"
  },
  "mateAcademy": {
    "projectType": "layout",
    "linters": {
      "javascript": false
    }
  },
  "rules": {
    "declaration-empty-line-before": null
  }
}
