    "@mate-academy/linthtml-config": "latest",
    "@mate-academy/scripts": "^1.7.2",
    "@mate-academy/stylelint-config": "latest",
    "@parcel/transformer-sass": "2.10.2",
    "backstopjs": "^6.2.2",
    "eslint": "^7.32.0",
    "eslint-plugin-node": "^11.1.0",
    "jest": "^29.7.0",
    "parcel": "2.10.2",
    "prettier": "^3.2.5",
