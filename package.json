{
  "name": "product-cards",
  "version": "1.0.0",
  "description": "Frontend practice with product cards",
  "main": "src/main.js",
  "scripts": {
    "css:test": "rimraf ./backstop_data/bitmaps_test && backstop test --config=config/backstop/backstopConfig",
    "css:reference": "rimraf ./backstop_data/bitmaps_reference && backstop reference --config=config/backstop/backstopConfig",
    "lint": "stylelint src/**/*.css && eslint src/**/*.js && linthtml src/*.html",
    "postinstall": "npm run css:reference",
    "publish": "bash ./config/hooks/deploy.sh",
    "start": "node server.js",
    "test": "npm run lint && npm run css:test"
  },
  "keywords": [],
  "author": "Mate Academy",
  "license": "GPL-3.0",
  "devDependencies": {
    "@mate-academy/backstop-config": "*",
    "@mate-academy/browsersync-config": "*",
    "@mate-academy/eslint-config": "*",
    "@mate-academy/htmllint-config": "*",
    "@mate-academy/stylelint-config": "*",
    "backstopjs": "^4.0.3",
    "browser-sync": "^2.1.6",
    "eslint": "^5.16.0",
    "eslint-plugin-node": "^8.0.1",
    "htmllint": "^0.7.3",
    "htmllint-cli": "0.0.7",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "rimraf": "^2.6.3",
    "stylelint": "^10.0.0"
  },
  "lint-staged": {
    "linters": {
      "*.css": [
        "stylelint",
        "git add"
      ],
      "*.js": [
        "eslint",
        "git add"
      ],
      "*.html": [
        "linthtml",
        "git add"
      ]
    },
    "ignore": [
      "**/backstop_data/**",
      "**/report/**"
    ]
  },
  "husky": {
    "hooks": {
      "post-commit": "git update-index --again",
      "pre-commit": "lint-staged"
    }
  }
}
