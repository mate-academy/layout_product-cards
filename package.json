    "@mate-academy/stylelint-config": "latest",
    "@parcel/transformer-sass": "^2.12.0",
    "backstopjs": "6.3.23",
    "jest": "^29.7.0",
    "parcel": "^2.12.0",
    "prettier": "^3.3.2",
    "stylelint": "^16.7.0",
    "stylelint-scss": "^6.4.1"
